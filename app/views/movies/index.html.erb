<h2>Movie Listing </h2>
<table>
  <tr>
    <th>Movie</th>
    <th>Year</th>
    <th>Language</th>
    <th></th>
    <th></th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.name, movie_path(movie)%></td>
      <td><%= movie.year%></td>
      <td><%= movie.language%></td>
      <td><%= link_to "Edit",edit_movie_path(movie)%></td>
      <td><%= link_to "Delete",movie_path(movie),
      method: :delete, confirm: "Are You Sure?" %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "Add Movie", new_movie_path %>